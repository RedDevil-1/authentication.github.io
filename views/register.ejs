<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i>
      </h1>
      <%- include ("./partials/messages"); %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name" style="font-weight: 400">Name</label>
          <input
            style="border: 1px solid black"
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email" style="font-weight: 400">Email</label>
          <input
            style="border: 1px solid black"
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password" style="font-weight: 400">Password</label>
          <input
            style="border: 1px solid black"
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2" style="font-weight: 400"
            >Confirm Password</label
          >
          <input
            style="border: 1px solid black"
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-success btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">
        Have An Account?
        <a style="font-weight: 800; color: blue" href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>
